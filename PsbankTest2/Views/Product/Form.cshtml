@model PsbankTest2.Models.ProductVM


<div class="form">
    <div class="form-group">
        <label>Product Id</label>
        <input type="text" name="productId" class="form-control" value="@(Model.Product == null ? 0 : Model.Product.Id)" />
    </div>
    <div class="form-group">
        <label>Product Name</label>
        <input type="text" name="productName" class="form-control" value="@(Model.Product == null ? "" : Model.Product.Name)" />
    </div>
    <div class="form-group">
        Product Cost
        <div class="col-md-10">
            <input type="text" name="productCost" class="form-control" value="@(Model.Product == null ? 0 : Model.Product.Cost)" />
        </div>
    </div>
    <div class="form-group">
        Quantity
        <div class="col-md-10">
            <input type="text" name="quantity" class="form-control" />

        </div>
    </div>
</div>